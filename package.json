{
	"name": "hugin-bank",
	"version": "0.0.1",
	"private": true,
	"description": "Minimal Sveltekit + Electron starter template.",
	"main": "src/electron.cjs",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "svelte-kit dev",
		"dev:electron": "electron src/electron.cjs",
		"build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
		"build:svelte": "svelte-kit build",
		"build:electron": "electron-builder -mwl --config build.config.json",
		"start": "svelte-kit start"
	},
	"browserslist": [
		"Chrome 89"
	],
	"dependencies": {
		"@commonify/lowdb": "^3.0.0",
		"better-sqlite3": "^7.5.0",
		"electron-context-menu": "^2.5.2",
		"electron-fetch": "^1.7.4",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^1.1.0",
		"electron-window-state": "^5.0.3",
		"hugin-crypto": "^0.0.2",
		"kryptokrona-crypto": "^1.0.0",
		"kryptokrona-utils": "^1.3.4",
		"kryptokrona-wallet-backend-js": "^2.4.0",
		"node-pre-gyp": "^0.17.0",
		"sanitize-html": "^2.7.0",
		"sqlite3": "^5.0.8",
		"tweetnacl": "^1.0.3",
		"tweetnacl-sealed-box": "^1.0.5",
		"tweetnacl-util": "^0.15.1"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.0-next.28",
		"@sveltejs/kit": "next",
		"@types/electron-window-state": "^2.0.34",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"@zerodevx/svelte-toast": "^0.7.1",
		"concurrently": "^6.5.1",
		"cross-env": "^7.0.3",
		"dotenv": "^8.6.0",
		"electron": "^17.2.0",
		"electron-builder": "^22.14.13",
		"electron-connect": "^0.6.3",
		"electron-packager": "^15.4.0",
		"electron-updater": "^4.6.5",
		"eslint": "^7.32.0",
		"eslint-plugin-svelte": "^1.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"sass": "^1.50.0",
		"svelte": "^3.46.4",
		"svelte-check": "^1.6.0",
		"svelte-preprocess": "^4.10.4",
		"typescript": "^4.6.2",
		"vite": "^2.8.6"
	}
}
